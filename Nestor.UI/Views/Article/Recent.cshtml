@model IEnumerable<Nestor.Models.Entities.Article>

@{
    Layout = null;
}

<!-- BEGIN RECENT NEWS -->
<div id="recent-news">
    <h2 class="font-blue-steel"><i class="fa fa-indent" style="font-size:20px;"></i>&nbsp;近期新闻</h2>
    <div class="margin-bottom-10">
        <ul class="list-group" id="recent-list">
            @foreach (var item in Model)
            {
                <li class="list-group-item">
                    <span class="fa fa-arrow-circle-right"></span>
                    <a href="/Article/@item.Id" title="@item.Title">@item.Title</a>
                </li>
            }
        </ul>
    </div>
</div>
<!-- END RECENT NEWS -->