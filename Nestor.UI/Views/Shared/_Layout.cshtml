<head>
    <meta charset="utf-8">
    <title>信息与控制实验教学中心 - @ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="shortcut icon" href="favicon.ico">
    <!-- Global styles START -->
    <link href="~/Content/metinfo_ui.css" rel="stylesheet" type="text/css">
    <link href="~/Content/metinfo.css" rel="stylesheet" type="text/css">
    <!-- Global styles END -->
    @RenderSection("styles", required: false)
    
</head>
<body>
    <!-- BEGIN HEADER -->
    <div class="page-header">
        <!-- BEGIN HEADER TOP -->
        <div class="page-header-top">
            <div class="container">
                <!-- BEGIN LOGO -->
                <div class="page-logo">
                    <a href="/"><img src="/Images/logo.png" alt="logo" class="logo-default"></a>
                </div>
                <!-- END LOGO -->
            </div>
        </div>
        <!-- END HEADER TOP -->
        @Html.Action("Menu", "Home")
    </div>
    <!-- END HEADER -->
    <!-- BEGIN PAGE CONTAINER -->
    <div class="page-container">
        <!-- BEGIN PAGE HEAD -->
        @RenderSection("pagehead", required: false)

        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE CONTENT -->
        <div class="page-content">
            <div class="container">
                @RenderSection("slider", required: false)
                <!-- BEGIN PAGE BREADCRUMB -->
                @RenderSection("breadcrumb", required: false)

                <!-- END PAGE BREADCRUMB -->
                <!-- BEGIN PAGE CONTENT INNER -->
                @RenderBody()
                <!-- END PAGE CONTENT INNER -->
            </div>
        </div>
        <!-- END PAGE CONTENT -->
    </div>
    <!-- END PAGE CONTAINER -->
    <!-- BEGIN PRE-FOOTER -->
    <div class="page-prefooter">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-6 col-xs-12 footer-block">
                    <h2>基地介绍</h2>
                    <p>
                        学校坐落于风景如画的太湖之滨、雪浪山麓——江苏省无锡市蠡湖大道1800号；
                    </p>
                </div>
                <div class="col-md-4 col-sm-6 col-xs-12 footer-block">
                    <h2>关于我们</h2>
                    <p>
                        学校以“笃学尚行，止于至善”为校训精神；以“彰显轻工特色，服务国计民生；创新培养模
                    </p>
                </div>
                <div class="col-md-4 col-sm-6 col-xs-12 footer-block">
                    <h2>联系我们</h2>
                    <address class="margin-bottom-40">
                        Phone: 800 123 3456<br>
                        Email: info@jiangnan.edu.cn
                    </address>
                </div>
            </div>
        </div>
    </div>
    <!-- END PRE-FOOTER -->
    <!-- BEGIN FOOTER -->
    <div class="scroll-to-top">
        <i class="icon-arrow-up"></i>
    </div>
    <!-- END FOOTER -->
    <!-- BEGIN JAVASCRIPTS -->
    <!-- BEGIN CORE PLUGINS (REQUIRED FOR ALL PAGES) -->
    <!--[if lt IE 9]>
    <script src="/assets/global/plugins/respond.min.js"></script>
    <![endif]-->
    <script src="~/Scripts/jquery-1.7.2.js" type="text/javascript"></script>
    <script src="~/Scripts/metinfo_ui.js" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->
    <!-- END CORE JAVASCRIPTS -->
    @RenderSection("scripts", required: false)
</body>
</html>
